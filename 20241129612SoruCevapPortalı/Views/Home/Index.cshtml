@model List<_20241129612SoruCevapPortalı.Models.Question>
@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="row">
    <div class="col-md-3">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-dark text-white">
                <i class="fas fa-bars"></i> Menü
            </div>
            <div class="list-group list-group-flush">
                <a href="/Question/Create" class="list-group-item list-group-item-action bg-success text-white fw-bold">
                    <i class="fas fa-plus-circle"></i> Soru Sor
                </a>
                <a href="/" class="list-group-item list-group-item-action">
                    <i class="fas fa-stream"></i> Tüm Sorular
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-9">
        <h4 class="mb-3">Son Paylaşımlar</h4>

        @if (Model.Count == 0)
        {
            <div class="alert alert-info text-center">
                Henüz hiç soru sorulmamış. İlk soruyu sen sor!
            </div>
        }

        @foreach (var item in Model)
        {
            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <a href="/Question/Details/@item.Id" class="h5 text-decoration-none text-primary fw-bold stretched-link">
                            @item.Title
                        </a>
                        <span class="badge bg-secondary">@item.Category?.Name</span>
                    </div>

                    <p class="card-text text-muted text-truncate" style="max-width: 100%;">
                        @item.Content
                    </p>

                    <div class="d-flex justify-content-between align-items-center mt-3 small text-muted border-top pt-2">
                        <div>
                            <i class="fas fa-user-circle"></i> @(item.User?.Username ?? "Misafir")
                            <span class="mx-2">|</span>
                            <i class="far fa-clock"></i> @item.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                        </div>
                        <div>
                            <i class="fas fa-comment-dots"></i> @(item.Answers?.Count ?? 0) Cevap
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>