@model _20241129612SoruCevapPortalı.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Yeni Şifre Belirle";
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Şifre Sıfırla - Soru Cevap Portalı</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f8f9fc;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 400px;
        }

        .card-header {
            background: #1cc88a;
            color: white;
            border-radius: 15px 15px 0 0 !important;
            text-align: center;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">Yeni Şifre Belirle</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="ResetPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="Token" />

                <div class="mb-3">
                    <label class="form-label small fw-bold">Yeni Şifre</label>
                    <input asp-for="NewPassword" type="password" class="form-control" placeholder="••••••••" required />
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label class="form-label small fw-bold">Şifreyi Onayla</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="••••••••" required />
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-success w-100 fw-bold">Şifreyi Güncelle</button>
            </form>
        </div>
    </div>
</body>
</html>