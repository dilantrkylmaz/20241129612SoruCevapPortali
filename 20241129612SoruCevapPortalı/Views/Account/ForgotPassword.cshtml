@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Şifremi Unuttum - Soru Cevap Portalı</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        body {
            background-color: #f8f9fc;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 400px;
        }

        .card-header {
            background: #4e73df;
            color: white;
            border-radius: 15px 15px 0 0 !important;
            text-align: center;
            padding: 20px;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="card-header">
            <h4 class="mb-0">Şifremi Unuttum</h4>
        </div>
        <div class="card-body p-4">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-info text-center small">@ViewBag.Message</div>
                <div class="text-center mt-3"><a asp-action="Login" class="btn btn-secondary btn-sm">Girişe Dön</a></div>
            }
            else
            {
                <p class="text-muted small text-center mb-4">E-posta adresinizi girin, size bir sıfırlama bağlantısı gönderelim.</p>
                <form asp-action="ForgotPassword" method="post">
                    <div class="mb-3">
                        <input type="email" name="email" class="form-control" placeholder="E-posta Adresiniz" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Sıfırlama Bağlantısı Gönder</button>
                </form>
                <div class="text-center mt-3">
                    <a asp-action="Login" class="small text-decoration-none">Vazgeç ve Giriş Yap</a>
                </div>
            }
        </div>
    </div>
</body>
</html>