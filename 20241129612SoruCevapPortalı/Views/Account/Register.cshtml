@model _20241129612SoruCevapPortalı.Models.User
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kayıt Ol</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.2);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card p-4">
                    <div class="text-center mb-4">
                        <h3 class="fw-bold text-primary">Yeni Hesap Oluştur</h3>
                        <small class="text-muted">Hemen aramıza katıl!</small>
                    </div>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle"></i> @ViewBag.Error
                        </div>
                    }

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Error</div>
                    }

                    <form asp-action="Register" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger small"></div>

                        <div class="row mb-3">
                            <div class="col-6">
                                <label>Ad</label>
                                <input type="text" asp-for="FirstName" class="form-control" required />
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="col-6">
                                <label>Soyad</label>
                                <input type="text" asp-for="LastName" class="form-control" required />
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label>Kullanıcı Adı</label>
                            <input type="text" asp-for="Username" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label>E-Posta</label>
                            <input type="email" asp-for="Email" class="form-control" required />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label>Telefon</label>
                            <input type="tel" asp-for="PhoneNumber" class="form-control" placeholder="05XX..." required />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label>Şifre</label>
                            <input type="password" asp-for="Password" class="form-control" required />
                        </div>

                        <div class="mb-4">
                            <label>Profil Fotoğrafı (İsteğe Bağlı)</label>
                            <input type="file" name="profileImage" class="form-control" accept="image/*" />
                            <small class="text-muted" style="font-size: 0.8rem;">Yüklemezseniz isminize özel avatar oluşur.</small>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 fw-bold">Kayıt Ol</button>
                    </form>

                    <div class="text-center mt-3">
                        <span class="text-muted">Zaten üye misin?</span>
                        <a href="/Account/Login" class="text-decoration-none fw-bold">Giriş Yap</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>