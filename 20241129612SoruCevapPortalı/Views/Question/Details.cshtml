@model _20241129612SoruCevapPortalı.Models.Question
@using System.Security.Claims

@{
    ViewData["Title"] = "Soru Detayı";
    // Giriş yapmış kullanıcının ID'sini alıyoruz
    var currentUserId = User.Identity.IsAuthenticated ? User.FindFirstValue(ClaimTypes.NameIdentifier) : null;
}

<div class="container mt-5">

    <div class="card shadow-sm mb-4 border-primary">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@Model.Title</h4>
            <div>
                @* DÜZENLE BUTONU (Sadece sahibi/Admin görür) *@
                @if (User.Identity.IsAuthenticated && (Model.UserId.ToString() == currentUserId || User.IsInRole("Admin") || User.IsInRole("MainAdmin")))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning me-2">
                        <i class="fas fa-edit"></i> Düzenle
                    </a>
                }
                <span class="badge bg-light text-primary">@Model.Category?.Name</span>
            </div>
        </div>
        <div class="card-body">
            <p class="card-text lead">@Model.Content</p>
            <hr />

            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    <span><i class="fa fa-user"></i> @Model.User?.UserName</span> |
                    <span><i class="fa fa-calendar"></i> @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</span>
                </div>

                <div class="d-flex align-items-center">
                    @{
                        var hasLikedQuestion = Model.QuestionLikes?.Any(x => x.UserId.ToString() == currentUserId) ?? false;
                    }
                    <button class="btn btn-sm @(hasLikedQuestion ? "btn-primary" : "btn-outline-primary") q-like-btn" data-id="@Model.Id">
                        <i class="fa fa-thumbs-up"></i> Faydalı Soru (<span class="q-like-count">@(Model.QuestionLikes?.Count ?? 0)</span>)
                    </button>

                    @if (User.Identity.IsAuthenticated && Model.UserId.ToString() != currentUserId)
                    {
                        <button class="btn btn-sm btn-outline-danger ms-2 btn-report" data-q-id="@Model.Id">
                            <i class="fas fa-flag"></i> Raporla
                        </button>
                    }
                </div>
            </div>
        </div>

        @if (User.IsInRole("Admin") || User.IsInRole("MainAdmin"))
        {
            <div class="card-footer text-end bg-transparent border-0">
                <a href="/Question/DeleteQuestion/@Model.Id" class="btn btn-link text-danger btn-sm p-0" onclick="return confirm('Soruyu silmek istediğine emin misin?');">
                    <i class="fa fa-trash"></i> Soruyu Sil
                </a>
            </div>
        }
    </div>

    <h5 class="mb-3 text-secondary"><i class="fa fa-comments"></i> Cevaplar (@(Model.Answers?.Count ?? 0))</h5>

    <div id="answersList">
        @if (Model.Answers != null && Model.Answers.Any())
        {
            @foreach (var answer in Model.Answers.OrderByDescending(x => x.CreatedDate))
            {
                <div class="card mb-3 border-light shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
                            <strong class="text-primary">@answer.User?.UserName</strong>
                            <small class="text-muted">@answer.CreatedDate.ToString("dd.MM.yyyy HH:mm")</small>
                        </div>
                        <p class="card-text">@answer.Content</p>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div class="d-flex align-items-center">
                                @{
                                    var hasLikedAnswer = answer.AnswerLikes?.Any(x => x.UserId.ToString() == currentUserId) ?? false;
                                }
                                <button class="btn btn-sm @(hasLikedAnswer ? "btn-info text-white" : "btn-outline-info") a-like-btn" data-id="@answer.Id">
                                    <i class="fa fa-heart"></i> Teşekkür Et (<span class="a-like-count">@(answer.AnswerLikes?.Count ?? 0)</span>)
                                </button>

                                @if (User.Identity.IsAuthenticated && answer.UserId.ToString() != currentUserId)
                                {
                                    <button class="btn btn-sm btn-link text-danger text-decoration-none ms-2 btn-report" data-a-id="@answer.Id">
                                        <i class="fas fa-flag"></i> Bildir
                                    </button>
                                }
                            </div>

                            @if (User.IsInRole("Admin") || User.IsInRole("MainAdmin"))
                            {
                                <a href="/Question/DeleteAnswer/@answer.Id" class="text-danger small text-decoration-none" onclick="return confirm('Cevabı sil?');">
                                    <i class="fa fa-times"></i> Sil
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-secondary" id="noAnswerAlert">
                Henüz cevap yok. İlk cevabı sen yaz!
            </div>
        }
    </div>

    <div class="card mt-5 mb-5 bg-light border-0">
        <div class="card-body">
            <h5 class="card-title text-success mb-3">Hızlı Cevap Yaz</h5>
            @if (User.Identity.IsAuthenticated)
            {
                <form id="ajaxAnswerForm">
                    <div class="form-group mb-3">
                        <textarea id="txtAnswerContent" class="form-control shadow-sm" rows="3" placeholder="Cevabınızı buraya detaylıca yazın..."></textarea>
                    </div>
                    <button type="button" id="btnSendAnswer" class="btn btn-success px-4">
                        <i class="fa fa-paper-plane"></i> Gönder
                    </button>
                    <span id="loadingMsg" class="text-muted ms-2" style="display:none;">Gönderiliyor...</span>
                </form>
            }
            else
            {
                <div class="alert alert-warning border-0 shadow-sm">
                    Cevap yazmak için <a href="/Account/Login" class="fw-bold">giriş yapmalısınız</a>.
                </div>
            }
        </div>
    </div>
</div>

<div class="modal fade" id="reportModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-flag me-2"></i>İçeriği Raporla</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="reportQuestionId" />
                <input type="hidden" id="reportAnswerId" />
                <div class="mb-3">
                    <label class="form-label fw-bold">Neden Raporluyorsunuz?</label>
                    <textarea id="reportReason" class="form-control" rows="3" placeholder="Spam, küfür, yanlış bilgi vb. nedenini açıklayın..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Vazgeç</button>
                <button type="button" id="btnSubmitReport" class="btn btn-danger fw-bold">Raporu Yönetime Gönder</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            // --- BEĞENİ SİSTEMİ ---
            $(document).on("click", ".q-like-btn", function () {
                var btn = $(this);
                $.post("/Question/LikeQuestionAjax", { questionId: btn.data("id") }, function (res) {
                    if (res.success) {
                        btn.find(".q-like-count").text(res.count);
                        btn.toggleClass("btn-outline-primary btn-primary");
                    }
                }).fail(function() { alert("İşlem için giriş yapmalısınız!"); });
            });

            $(document).on("click", ".a-like-btn", function () {
                var btn = $(this);
                $.post("/Question/LikeAnswerAjax", { answerId: btn.data("id") }, function (res) {
                    if (res.success) {
                        btn.find(".a-like-count").text(res.count);
                        btn.toggleClass("btn-outline-info btn-info text-white");
                    }
                }).fail(function() { alert("İşlem için giriş yapmalısınız!"); });
            });

            // --- CEVAP GÖNDERME ---
            $("#btnSendAnswer").click(function () {
                var content = $("#txtAnswerContent").val();
                if (content.trim() === "") { alert("Boş cevap gönderilemez!"); return; }
                $("#btnSendAnswer").prop("disabled", true);
                $("#loadingMsg").show();

                $.post('/Question/CreateAnswerAjax', { Content: content, QuestionId: @Model.Id }, function (response) {
                    $("#loadingMsg").hide();
                    $("#btnSendAnswer").prop("disabled", false);
                    if (response.success) {
                        location.reload(); // Sayfayı yenilemek en temizi
                    } else { alert(response.message); }
                });
            });

            // --- RAPORLAMA SİSTEMİ (4. ADIM JAVASCRIPT) ---
            $(document).on("click", ".btn-report", function() {
                $("#reportQuestionId").val($(this).data("q-id") || "");
                $("#reportAnswerId").val($(this).data("a-id") || "");
                $("#reportReason").val("");
                $("#reportModal").modal("show");
            });

            $("#btnSubmitReport").click(function() {
                var qId = $("#reportQuestionId").val();
                var aId = $("#reportAnswerId").val();
                var reason = $("#reportReason").val();

                if (reason.trim().length < 5) { alert("Lütfen daha açıklayıcı bir neden yazın."); return; }

                $.post("/Question/ReportAjax", { questionId: qId, answerId: aId, reason: reason }, function(res) {
                    if (res.success) {
                        alert(res.message);
                        $("#reportModal").modal("hide");
                    } else { alert(res.message); }
                });
            });
        });
    </script>
}