@model _20241129612SoruCevapPortalı.Models.Question

@{
    ViewData["Title"] = "Soru Detayı";
}

<div class="container mt-5">

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@Model.Title</h4>
            <span class="badge bg-light text-primary">@Model.Category?.Name</span>
        </div>
        <div class="card-body">
            <p class="card-text lead">@Model.Content</p>
            <hr />
            <div class="d-flex justify-content-between text-muted small">
                <span>
                    <i class="fa fa-user"></i> Soru Sahibi: <strong>@Model.User?.Username</strong>
                </span>
                <span>
                    <i class="fa fa-calendar"></i> @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                </span>
            </div>
        </div>
        @if (User.IsInRole("Admin") || User.IsInRole("MainAdmin"))
        {
            <div class="card-footer text-end">
                <a href="/Question/DeleteQuestion/@Model.Id" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğine emin misin?');">
                    <i class="fa fa-trash"></i> Soruyu Sil
                </a>
            </div>
        }
    </div>

    <h5 class="mb-3"><i class="fa fa-comments"></i> Cevaplar</h5>

    <div id="answersList">
        @if (Model.Answers != null && Model.Answers.Any())
        {
            @foreach (var answer in Model.Answers)
            {
                <div class="card mb-3 border-light shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
                            <strong class="text-primary">@answer.User?.Username</strong>
                            <small class="text-muted">@answer.CreatedDate.ToString("dd.MM.yyyy HH:mm")</small>
                        </div>
                        <p class="card-text">@answer.Content</p>

                        @if (User.IsInRole("Admin") || User.IsInRole("MainAdmin"))
                        {
                            <a href="/Question/DeleteAnswer/@answer.Id" class="text-danger small text-decoration-none">Sil</a>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-secondary" id="noAnswerAlert">
                Henüz cevap yok. İlk cevabı sen yaz!
            </div>
        }
    </div>

    <div class="card mt-5 mb-5 bg-light border-0">
        <div class="card-body">
            <h5 class="card-title text-success mb-3">Hızlı Cevap Yaz</h5>

            @if (User.Identity.IsAuthenticated)
            {
                <form id="ajaxAnswerForm">
                    <div class="form-group mb-3">
                        <textarea id="txtAnswerContent" class="form-control" rows="3" placeholder="Cevabınızı yazın..."></textarea>
                    </div>
                    <button type="button" id="btnSendAnswer" class="btn btn-success">
                        <i class="fa fa-paper-plane"></i> Gönder
                    </button>
                    <span id="loadingMsg" class="text-muted ms-2" style="display:none;">Gönderiliyor...</span>
                </form>
            }
            else
            {
                <div class="alert alert-warning">
                    Cevap yazmak için <a href="/Account/Login">giriş yapmalısınız</a>.
                </div>
            }
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#btnSendAnswer").click(function () {
                var content = $("#txtAnswerContent").val();
                var questionId = @Model.Id;

                if (content.trim() === "") {
                    alert("Boş cevap gönderilemez!");
                    return;
                }

                $("#btnSendAnswer").prop("disabled", true);
                $("#loadingMsg").show();

                $.ajax({
                    url: '/Question/CreateAnswerAjax', 
                    type: 'POST',
                    data: { Content: content, QuestionId: questionId },
                    success: function (response) {
                        $("#loadingMsg").hide();
                        $("#btnSendAnswer").prop("disabled", false);

                        if (response.success) {
                            
                            $("#txtAnswerContent").val("");
                            $("#noAnswerAlert").remove(); 

                            
                            var newHtml = `
                                <div class="card mb-3 border-success shadow-sm">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between border-bottom pb-2 mb-2">
                                            <strong class="text-success">${response.username} <span class="badge bg-success" style="font-size:0.6em">YENİ</span></strong>
                                            <small class="text-muted">${response.date}</small>
                                        </div>
                                        <p class="card-text">${response.content}</p>
                                    </div>
                                </div>`;

                            $("#answersList").append(newHtml);
                        } else {
                            alert("Hata: " + response.message);
                        }
                    },
                    error: function () {
                        $("#loadingMsg").hide();
                        $("#btnSendAnswer").prop("disabled", false);
                        alert("Hata oluştu. Giriş yaptığınızdan emin olun.");
                    }
                });
            });
        });
    </script>
}