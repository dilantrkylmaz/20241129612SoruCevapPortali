@model _20241129612SoruCevapPortalı.Models.Question
@{
    ViewData["Title"] = "Soruyu Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark fw-bold">
                    <i class="fas fa-edit me-2"></i> Soruyu Düzenle
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="mb-3">
                            <label class="form-label fw-bold">Soru Başlığı</label>
                            <input asp-for="Title" class="form-control" placeholder="Sorunuzu kısaca özetleyin..." />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Kategori</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories"></select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Soru Detayı</label>
                            <textarea asp-for="Content" class="form-control" rows="6" placeholder="Sorunuzu detaylandırın..."></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Vazgeç</a>
                            <button type="submit" class="btn btn-warning fw-bold">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>