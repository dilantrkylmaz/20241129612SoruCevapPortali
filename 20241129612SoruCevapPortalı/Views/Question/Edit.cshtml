@model _20241129612SoruCevapPortalı.Models.Question
@{
    ViewData["Title"] = "Soruyu Düzenle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-warning fw-bold">Soruyu Düzenle</div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Soru Başlığı</label>
                            <input asp-for="Title" class="form-control" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Kategori</label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories"></select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Medyayı Yönet</label>
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="mb-2 p-2 border rounded bg-light text-center">
                                    <img src="@Model.ImageUrl" class="img-fluid rounded mb-2" style="max-height: 200px;" />
                                    <div class="form-check justify-content-center d-flex">
                                        <input class="form-check-input me-2" type="checkbox" name="removeCurrentMedia" id="chkRemove" value="true">
                                        <label class="form-check-label text-danger fw-bold" for="chkRemove">Bu medyayı sil</label>
                                    </div>
                                </div>
                            }
                            <input type="file" name="newMedia" class="form-control" accept="image/*,video/*" />
                            <small class="text-muted">Resim veya video seçebilirsiniz.</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Soru İçeriği</label>
                            <textarea asp-for="Content" class="form-control" rows="6"></textarea>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Question" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Vazgeç</a>
                            <button type="submit" class="btn btn-warning fw-bold">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>