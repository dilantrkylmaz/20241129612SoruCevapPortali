@model List<_20241129612SoruCevapPortalı.Models.Category>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kategori Yönetimi</h3>
        <div class="card-tools">
            <a href="/Admin/Category/Create" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i> Yeni Kategori
            </a>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table table-striped" id="categoriesTable">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Kategori Adı</th>
                    <th>Açıklama</th>
                    <th style="width: 150px">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row_@item.Id">
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td>
                            <a href="/Admin/Category/Edit/@item.Id" class="btn btn-info btn-sm">
                                <i class="fas fa-pencil-alt"></i>
                            </a>

                            <button class="btn btn-danger btn-sm btn-delete" data-id="@item.Id">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {

            // Sil butonuna tıklandığında...
            $(".btn-delete").click(function () {
                var id = $(this).data("id"); // Butondaki ID'yi al
                var row = $("#row_" + id);   // Silinecek satırı seç

                // Emin misin diye sor (SweetAlert2 veya düz confirm)
                if (confirm("Bu kategoriyi silmek istediğinize emin misiniz?")) {

                    // AJAX İsteği Başlat
                    $.ajax({
                        type: "POST",                 // Metod tipi
                        url: "/Admin/Category/DeleteAjax/" + id, // Gideceği adres
                        success: function (result) {   // İşlem başarılı olursa
                            if (result.success) {
                                // Satırı yavaşça yok et (Efektli)
                                row.fadeOut(500, function () {
                                    $(this).remove();
                                });
                            } else {
                                alert(result.message); // Hata varsa uyar
                            }
                        },
                        error: function () {
                            alert("Bir hata oluştu!");
                        }
                    });
                }
            });
        });
    </script>
}