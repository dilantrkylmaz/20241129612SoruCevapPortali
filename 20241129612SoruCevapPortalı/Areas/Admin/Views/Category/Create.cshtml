@model _20241129612SoruCevapPortalı.Models.Category
@{
    ViewData["Title"] = "Yeni Kategori";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Kategori Ekle</h3>
    </div>
    <form method="post">
        <div class="card-body">
            <div class="form-group">
                <label>Kategori Adı</label>
                <input type="text" asp-for="Name" class="form-control" placeholder="Örn: Yazılım" required>
            </div>
            <div class="form-group">
                <label>Açıklama</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a href="/Admin/Category/Index" class="btn btn-default float-right">İptal</a>
        </div>
    </form>
</div>