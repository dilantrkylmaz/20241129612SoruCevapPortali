@{
    ViewData["Title"] = "Özet Paneli";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4 shadow-sm border-left-primary">
    <div class="card-body p-4">
        <div class="d-flex align-items-center">
            <div class="mr-3">
                <i class="fas fa-user-shield fa-3x text-primary"></i>
            </div>
            <div>
                <h2 class="font-weight-bold text-dark mb-1">Sisteme Hoşgeldiniz.</h2>
                <p class="lead text-muted mb-0">
                    Sol menüden içerik yönetimi ve kullanıcı işlemlerini kolayca gerçekleştirebilirsiniz.
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 col-6">
        <div class="small-box bg-info shadow-sm">
            <div class="inner">
                <h3>@ViewBag.UserCount</h3>
                <p style="font-size: 1.1rem;">Toplam Üye</p>
            </div>
            <div class="icon">
                <i class="fas fa-users"></i>
            </div>
            <a href="/Admin/User/Index" class="small-box-footer">
                Detaylar <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-success shadow-sm">
            <div class="inner">
                <h3>@ViewBag.QuestionCount</h3>
                <p style="font-size: 1.1rem;">Toplam Soru</p>
            </div>
            <div class="icon">
                <i class="fas fa-question-circle"></i>
            </div>
            <a href="/Admin/Question/Index" class="small-box-footer">
                Detaylar <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning shadow-sm">
            <div class="inner">
                <h3>@ViewBag.CategoryCount</h3>
                <p style="font-size: 1.1rem;">Kategoriler</p>
            </div>
            <div class="icon">
                <i class="fas fa-list"></i>
            </div>
            <a href="/Admin/Category/Index" class="small-box-footer">
                Detaylar <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-6">
        <div class="small-box bg-danger shadow-sm">
            <div class="inner">
                <h3>@ViewBag.AnswerCount</h3>
                <p style="font-size: 1.1rem;">Verilen Cevaplar</p>
            </div>
            <div class="icon">
                <i class="fas fa-comments"></i>
            </div>
            <a href="/Admin/Answer/Index" class="small-box-footer">
                Detaylar <i class="fas fa-arrow-circle-right"></i>
            </a>
        </div>
    </div>
</div>