@model List<_20241129612SoruCevapPortalı.Models.User>
@{
    ViewData["Title"] = "Üye Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kayıtlı Üyeler</h3>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger m-3">
            <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
        </div>
    }

    <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 5%">#</th>
                    <th style="width: 30%">Kullanıcı Adı</th>
                    <th style="width: 15%">Rol</th>
                    <th style="width: 15%">Soru Sayısı</th>
                    <th style="width: 35%" class="text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            @{
                                string avatarUrl = !string.IsNullOrEmpty(item.ProfileImageUrl)
                                ? item.ProfileImageUrl
                                : "/img/default-user.png";
                            }

                            <div class="d-flex align-items-center">
                                <img src="@avatarUrl"
                                     alt="Profil"
                                     class="rounded-circle me-2"
                                     width="40"
                                     height="40"
                                     style="object-fit: cover; border: 2px solid #ddd;">

                                <div>
                                    <div class="fw-bold">@item.FullName</div>
                                    <small class="text-muted">@@@item.Username</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div style="font-size: 0.9rem;">
                                <div><i class="fas fa-envelope text-muted"></i> @item.Email</div>
                                <div><i class="fas fa-phone text-muted"></i> @item.PhoneNumber</div>
                            </div>
                        </td>

                        <td>
                            @if (item.Role == "MainAdmin")
                            {
                                <span class="badge bg-warning text-dark p-2"><i class="fas fa-crown"></i> Ana Yönetici</span>
                            }
                            else if (item.Role == "Admin")
                            {
                                <span class="badge badge-danger p-2">Yönetici</span>
                            }
                            else
                            {
                                <span class="badge badge-success p-2">Üye</span>
                            }
                        </td>

                        <td class="text-right">
                            <!-- İŞLEMLER KISMI AYNI KALSIN (SİLME BUTONLARI VS.) -->
                            @if (item.Role != "MainAdmin")
                            {
                                if (item.Role == "Uye" || User.IsInRole("MainAdmin"))
                                {
                                    <a class="btn btn-danger btn-sm" href="/Admin/User/Delete/@item.Id" onclick="return confirm('Silmek istediğine emin misin?');"><i class="fas fa-trash"></i></a>
                                }
                                if (item.Role == "Uye")
                                {
                                    <a class="btn btn-success btn-sm" href="/Admin/User/ChangeRole/@item.Id" title="Yönetici Yap"><i class="fas fa-user-shield"></i></a>
                                }
                                else
                                {
                                    <a class="btn btn-warning btn-sm" href="/Admin/User/ChangeRole/@item.Id" title="Yetkisini Al"><i class="fas fa-user-times"></i></a>
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>