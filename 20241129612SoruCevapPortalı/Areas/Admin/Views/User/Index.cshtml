@model List<_20241129612SoruCevapPortalı.Models.User>
@{
    ViewData["Title"] = "Üye Listesi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kayıtlı Üyeler</h3>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger m-3">
            <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
        </div>
    }

    <div class="card-body p-0">
        <div class="card-body border-bottom">
            <form method="get" action="/Admin/User/Index">
                <div class="row">
                    <div class="col-md-5">
                        <input type="text" name="search" class="form-control" placeholder="Ad, Soyad veya Kullanıcı Adı..." value="@Context.Request.Query["search"]">
                    </div>
                    <div class="col-md-3">
                        <select name="role" class="form-control">
                            <option value="">-- Tüm Roller --</option>
                            <option value="Uye" selected="@(Context.Request.Query["role"] == "Uye")">Üye</option>
                            <option value="Admin" selected="@(Context.Request.Query["role"] == "Admin")">Yönetici</option>
                            <option value="MainAdmin" selected="@(Context.Request.Query["role"] == "MainAdmin")">Ana Yönetici</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i> Ara</button>
                        <a href="/Admin/User/Index" class="btn btn-secondary">Sıfırla</a>
                    </div>
                </div>
            </form>
        </div>

        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 5%">#</th>
                    <th style="width: 30%">Kullanıcı Bilgileri</th>
                    <th style="width: 20%">İletişim</th>
                    <th style="width: 15%">Rol</th>
                    <th style="width: 30%" class="text-right">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            <div class="d-flex align-items-center">
                                @{
                                    string avatarUrl = !string.IsNullOrEmpty(item.ProfileImageUrl) ? item.ProfileImageUrl : "/img/default-user.png";
                                }
                                <img src="@avatarUrl" class="rounded-circle me-2" width="40" height="40" style="object-fit: cover; border: 2px solid #ddd;">
                                <div>
                                    <div class="fw-bold">@item.FullName</div>
                                    <small class="text-muted">@@@item.Username</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div style="font-size: 0.85rem;">
                                <div><i class="fas fa-envelope text-muted"></i> @item.Email</div>
                                <div><i class="fas fa-phone text-muted"></i> @item.PhoneNumber</div>
                            </div>
                        </td>
                        <td>
                            @if (item.Role == "MainAdmin")
                            {
                                <span class="badge bg-warning text-dark">Ana Yönetici</span>
                            }
                            else if (item.Role == "Admin")
                            {
                                <span class="badge bg-danger">Yönetici</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Üye</span>
                            }
                        </td>
                        <td class="text-right">
                            @if (item.Role != "MainAdmin")
                            {
                                <a class="btn btn-info btn-sm" href="/Admin/User/Edit/@item.Id"><i class="fas fa-pencil-alt"></i></a>
                                <a class="btn btn-danger btn-sm" href="/Admin/User/Delete/@item.Id" onclick="return confirm('Silmek istediğine emin misin?');"><i class="fas fa-trash"></i></a>

                                if (item.Role == "Uye")
                                {
                                    <a class="btn btn-success btn-sm" href="/Admin/User/ChangeRole/@item.Id" title="Yönetici Yap"><i class="fas fa-user-shield"></i></a>
                                }
                                else
                                {
                                    <a class="btn btn-warning btn-sm" href="/Admin/User/ChangeRole/@item.Id" title="Yetkisini Al"><i class="fas fa-user-times"></i></a>
                                }
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>