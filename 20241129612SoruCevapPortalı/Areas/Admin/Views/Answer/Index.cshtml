@model List<_20241129612SoruCevapPortalı.Models.Answer>
@{
    ViewData["Title"] = "Tüm Cevaplar";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Sisteme Girilen Cevaplar</h3>
    </div>
<div class="card-body border-bottom">
    <form method="get" action="/Admin/Answer/Index">
        <div class="row">
            <div class="col-md-4">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-question-circle"></i></span>
                    </div>
                    <input type="text" name="searchQuestion" class="form-control" placeholder="Soru başlığında ara..." value="@Context.Request.Query["searchQuestion"]">
                </div>
            </div>

            <div class="col-md-4">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    <input type="text" name="searchUser" class="form-control" placeholder="Cevaplayanda ara..." value="@Context.Request.Query["searchUser"]">
                </div>
            </div>

            <div class="col-md-4">
                <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i> Filtrele</button>
                <a href="/Admin/Answer/Index" class="btn btn-secondary">Sıfırla</a>
            </div>
        </div>
    </form>
</div>

<div class="card-body p-0">
    <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 5%">#</th>
                    <th style="width: 20%">Cevaplayan</th>
                    <th style="width: 30%">Soru Başlığı</th>
                    <th style="width: 35%">Cevap İçeriği</th>
                    <th style="width: 10%">İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                             <span class="badge bg-secondary">
                                 <i class="fas fa-user"></i> @(item.User?.UserName ?? "Silinmiş Üye")
                             </span>
                        </td>
                        <td>
                            <a href="/Question/Details/@item.QuestionId" target="_blank">
                                @(item.Question?.Title ?? "Silinmiş Soru") <i class="fas fa-external-link-alt small"></i>
                            </a>
                        </td>
                        <td>
                            @if(item.Content.Length > 60)
                            {
                                @item.Content.Substring(0, 60) <span class="text-muted">...</span>
                            }
                            else
                            {
                                @item.Content
                            }
                        </td>
                        <td>
                            <a href="/Admin/Answer/Delete/@item.Id" 
                               onclick="return confirm('Bu cevabı silmek istediğine emin misin?')" 
                               class="btn btn-danger btn-sm">
                               <i class="fas fa-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>