@model List<_20241129612SoruCevapPortalı.Models.Question>
@{
    ViewData["Title"] = "Soru Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Tüm Sorular</h3>
    </div>
    <div class="card-body p-0">
        <div class="card-body border-bottom">
            <form method="get" action="/Admin/Question/Index">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Soru başlığında ara..." value="@Context.Request.Query["search"]">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i> Ara
                        </button>
                        @if (!string.IsNullOrEmpty(Context.Request.Query["search"]))
                        {
                            <a href="/Admin/Question/Index" class="btn btn-secondary">Temizle</a>
                        }
                    </div>
                </div>
            </form>
        </div>
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 5%">#</th>
                    <th style="width: 30%">Başlık</th>
                    <th style="width: 15%">Kategori</th>
                    <th style="width: 15%">Soran</th>
                    <th style="width: 10%">Cevap</th>
                    <th style="width: 25%">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            <a href="/Question/Details/@item.Id" target="_blank" class="fw-bold text-dark">
                                @item.Title
                            </a>
                            <br />
                            <small class="text-muted">@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</small>
                        </td>
                        <td><span class="badge bg-secondary">@item.Category?.Name</span></td>
                        <td>@item.User?.Username</td>
                        <td><span class="badge badge-info">@(item.Answers?.Count ?? 0)</span></td>
                        <td class="project-actions text-right">
                            <a class="btn btn-danger btn-sm" href="/Admin/Question/Delete/@item.Id" onclick="return confirm('Bu soruyu kalıcı olarak silmek istediğine emin misin?');">
                                <i class="fas fa-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>