@model List<_20241129612SoruCevapPortalı.Models.Question>
@{
    ViewData["Title"] = "Soru Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Tüm Sorular</h3>
    </div>
    <div class="card-body p-0">
        <div class="card-body border-bottom">
            <form method="get" action="/Admin/Question/Index">
                <div class="row">
                    <div class="col-md-4">
                        <input type="text" name="search" class="form-control" placeholder="Başlık ara..." value="@Context.Request.Query["search"]">
                    </div>
                    <div class="col-md-4">
                        <select name="categoryId" class="form-control">
                            <option value="">-- Tüm Kategoriler --</option>
                            @foreach (var cat in ViewBag.Categories as List<_20241129612SoruCevapPortalı.Models.Category>)
                            {
                                <option value="@cat.Id" selected="@(Context.Request.Query["categoryId"] == cat.Id.ToString())">@cat.Name</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-4">
                        <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i> Filtrele</button>
                        <a href="/Admin/Question/Index" class="btn btn-secondary">Temizle</a>
                    </div>
                </div>
            </form>
        </div>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        @if (item.Answers != null && item.Answers.Count > 0)
                        {
                            <span class="badge bg-success">@item.Answers.Count Cevap</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">0 Cevap</span>
                        }
                    </td>

                </tr>
            }
        </tbody>
        </table>
    </div>
</div>